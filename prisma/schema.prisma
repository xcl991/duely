// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// NextAuth.js Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// User Model
model User {
  id            String         @id @default(cuid())
  name          String?
  username      String?        @unique
  email         String         @unique
  emailVerified DateTime?
  password      String?
  image         String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  // Subscription Plan Fields
  subscriptionPlan      String    @default("free") // "free", "pro", "business"
  subscriptionStatus    String    @default("active") // "active", "trial", "canceled", "expired"
  subscriptionStartDate DateTime? // When the paid plan started
  subscriptionEndDate   DateTime? // When the paid plan expires
  billingCycle          String?   // "monthly", "yearly"

  // Relations
  accounts          Account[]
  sessions          Session[]
  subscriptions     Subscription[]
  categories        Category[]
  members           Member[]
  notifications     Notification[]
  settings          UserSettings?
  pushSubscriptions PushSubscription[]

  @@index([subscriptionPlan])
  @@index([subscriptionEndDate])
}

// Subscription Model
model Subscription {
  id               String   @id @default(cuid())
  userId           String
  categoryId       String?
  memberId         String?
  serviceName      String
  serviceIcon      String?
  amount           Float
  currency         String   @default("IDR")
  billingFrequency String   // "monthly", "yearly", "quarterly"
  startDate        DateTime
  nextBilling      DateTime
  status           String   @default("active") // "active", "trial", "paused", "canceled"
  notes            String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // Relations
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  category      Category?      @relation(fields: [categoryId], references: [id])
  member        Member?        @relation(fields: [memberId], references: [id])
  notifications Notification[]

  @@index([userId])
  @@index([categoryId])
  @@index([memberId])
  @@index([nextBilling])
  @@index([status])
}

// Category Model
model Category {
  id             String         @id @default(cuid())
  userId         String
  name           String
  icon           String?
  color          String?
  budgetLimit    Float?
  budgetCurrency String?        @default("IDR") // Currency for the budget
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt

  // Relations
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  subscriptions Subscription[]

  @@index([userId])
}

// Member Model
model Member {
  id            String         @id @default(cuid())
  userId        String
  name          String
  avatarColor   String?
  avatarImage   String?
  isPrimary     Boolean        @default(false)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  // Relations
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  subscriptions Subscription[]

  @@index([userId])
  @@index([isPrimary])
}

// Notification Model
model Notification {
  id             String        @id @default(cuid())
  userId         String
  subscriptionId String?
  type           String        // "renewal_reminder", "budget_alert", "info", "overdue"
  title          String
  message        String
  isRead         Boolean       @default(false)
  createdAt      DateTime      @default(now())

  // Relations
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  subscription Subscription? @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([subscriptionId])
  @@index([isRead])
  @@index([createdAt])
}

// UserSettings Model
model UserSettings {
  id                      String   @id @default(cuid())
  userId                  String   @unique
  currency                String   @default("IDR")
  language                String   @default("en")
  emailReminders          Boolean  @default(true)
  reminderDaysBefore      Int      @default(3)
  weeklyDigest            Boolean  @default(false)
  monthlyBudgetLimit      Float?   // Optional monthly spending limit
  monthlyBudgetCurrency   String?  @default("IDR") // Currency for monthly budget
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// Payment Model - Track all payment transactions
model Payment {
  id                  String   @id @default(cuid())
  userId              String
  provider            String   // "stripe", "xendit"
  providerPaymentId   String?  // External payment ID from provider
  providerCustomerId  String?  // External customer ID from provider
  amount              Float
  currency            String   // "USD", "IDR", etc.
  status              String   // "pending", "completed", "failed", "refunded"
  paymentMethod       String?  // "card", "paypal", "apple_pay", "google_pay", "qris"
  plan                String   // "pro_monthly", "pro_yearly", "business_monthly", "business_yearly"
  billingPeriodStart  DateTime?
  billingPeriodEnd    DateTime?
  invoiceUrl          String?
  receiptUrl          String?
  metadata            String?  // JSON string for additional data
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@index([userId])
  @@index([provider])
  @@index([providerPaymentId])
  @@index([status])
  @@index([createdAt])
}

// Subscription History - Track plan changes
model SubscriptionHistory {
  id              String   @id @default(cuid())
  userId          String
  action          String   // "upgraded", "downgraded", "canceled", "renewed", "trial_started", "trial_ended"
  fromPlan        String?  // Previous plan
  toPlan          String   // New plan
  paymentId       String?  // Related payment ID
  effectiveDate   DateTime
  createdAt       DateTime @default(now())

  @@index([userId])
  @@index([createdAt])
}

// ExchangeRate Model - Store daily currency exchange rates
model ExchangeRate {
  id           String   @id @default(cuid())
  baseCurrency String   // Base currency (e.g., "USD")
  targetCurrency String // Target currency (e.g., "IDR")
  rate         Float    // Exchange rate
  date         DateTime @default(now()) // Date of the rate
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([baseCurrency, targetCurrency, date])
  @@index([baseCurrency, targetCurrency])
  @@index([date])
}

// PushSubscription Model - Web Push Notification Subscriptions
model PushSubscription {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Push subscription details
  endpoint   String   @unique
  p256dh     String   // Public key for encryption
  auth       String   // Authentication secret

  // Device information
  userAgent  String?
  deviceName String?  @default("Browser")

  // Metadata
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([userId])
  @@index([endpoint])
  @@map("push_subscriptions")
}
